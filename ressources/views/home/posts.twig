{% extends "layouts/default.twig" %}
{% block stylesheet %}
<link href="http://localhost/BlogPost-main/public/assets/css/style.css" rel="stylesheet">

{% endblock %}
{% block content %}

    <section id="project-section">
        <h1 class="heading padd80top">Tous mes articles</h1>
        <div class="deck-card">
            
            {% for post in posts %}
                <div class="card-item">
                    <div class="card-title">
                        <p class="">{{post.title}}</p>
                    </div>
                    <div class="extract">
                        <p class="">{{post.extract}}</p>
                    </div>
                    <a class="btn" href="{{ route('post.show', {'id':post.id}) }}">Lire la suite</a>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}

{% block javascripts %}
            
{% endblock %}