<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link href="http://localhost/BlogPost-main/public/assets/css/main.css" rel="stylesheet">
        <link href="http://localhost/BlogPost-main/public/assets/css/style.css" rel="stylesheet">
     
        {% block stylesheet %}
       
        {% endblock %}
       
        <title>Blog - Adélie</title>
    </head>

    <body>
    
        <header>
            

            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ route('home.index') }}">Web blog</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ route('post.index') }}">Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ route('home.contact') }}">Contact</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Mon compte
                                </a>
                                <ul class="dropdown-menu">
                                    {% if auth.status == null %}
                                        <li><a class="dropdown-item" href="{{ route('user.register') }}">S'enregistrer</a></li>
                                        <li><a class="dropdown-item" href="{{ route('user.login') }}">Connexion</a></li>
                                    {% else %}
                                        <li><a class="dropdown-item" href="{{ route('user.logout') }}">Déconnexion</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        {% if auth.status == 1 %}
                                            <li><a class="dropdown-item" href="{{ route('admin.articles') }}">Mes articles</a></li>
                                            <li><a class="dropdown-item" href="{{ route('admin.create') }}">Créer un article</a></li>
                                            <li><a class="dropdown-item" href="{{ route('comments.index') }}">Les commentaires</a></li>
                                        {% endif %}

                                    {% endif %}
                                </ul>
                            </li>
                            
                        </ul>
                    
                    </div>
                </div>
            </nav>

           
        </header>

      
        <main class="">
            <div class="container">
                {% block content %}
                {% endblock %}
            </div>
        </main>

    <!-- footer
    ================================================== -->
    <section id="footer-section">
        
        <footer id="footer">
            <div class="card_deck">
                <div class="column large-full ss-copyright">
                    <span>© Copyright WEB Blog 2023</span> 
                    <span>Design by Adélie</span>
                </div>            
            </div>
        </footer>
    </section>
    <script src="http://localhost/BlogPost-main/public/assets/js/jquery-3.6.3.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    {% block javascripts %}
    
    {% endblock %}
    </body>
    
</html>
