{% extends "layouts/default.twig" %}

{% block content %}
<section id="article-section">
    <h1 class="heading">Cr√©er un article</h1>
    
    <div class="create_article">

        <form method='POST' action=" {{ route('admin.create') }} ">

            <div class="form-input">
                <label for="title">Titre</label><br>
                <input type="text" class="" id="title" name="title" value="{{post.title}}" >
                {% for error in errors.title %}
                    <p class="red-error">{{error}}</p>
                {% endfor %}
            </div>

            <div class="form-input">
                <label for="extract">Extrait</label><br>
                <input type="text" id="extract" name="extract" value="{{post.extract}}">
                {% for error in errors.extract %}
                    <p class="red-error">{{error}}</p>
                {% endfor %}
            </div>

            <div class="form-input">
                <label for="post-content">Contenu de l'article</label><br>
                <textarea name="content" id="post-content" cols="30" rows="10">{{post.content}}</textarea>
                {% for error in errors.content %}
                    <p class="red-error">{{error}}</p>
                {% endfor %}
            </div>

            <button class="btn" type="submit">Enregistrer</button>

        </form>

    </div>
</section>
{% endblock %}
